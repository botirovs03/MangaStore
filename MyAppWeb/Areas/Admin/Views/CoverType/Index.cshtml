@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                CoverType List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="CoverType" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New CoverType
            </a>
        </div>
    </div>
</div>

<br />
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">
                    @item.Id
                </td>
                <td width="30%">
                    @item.Name
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@item.Id"
                        class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"> Edit</i></a>
                        <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill">Delete</i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>